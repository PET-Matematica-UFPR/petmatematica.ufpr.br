{
  "name": "petmatematica.ufpr.br",
  "version": "1.0.0",
  "description": "Site do PET Matem√°tica da UFPR",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently -p \"[{name}]\" -n \"Tailwind CSS,Hugo\" -c \"blue,green\" \"yarpm run watch-tailwind\" \"yarpm run watch-hugo\" ",
    "watch-tailwind": "node ./themes/blowfish/node_modules/tailwindcss/lib/cli.js -c ./themes/blowfish/tailwind.config.js -i ./themes/blowfish/assets/css/main.css -o ./assets/css/compiled/main.css --jit -w",
    "watch-hugo": "hugo serve -D --noHTTPCache --disableFastRender",
    "build": "cross-env NODE_ENV=production ./themes/blowfish/node_modules/tailwindcss/lib/cli.js -c ./themes/blowfish/tailwind.config.js -i ./themes/blowfish/assets/css/main.css -o ./assets/css/compiled/main.css --jit && hugo --cleanDestinationDir -e production --minify",
    "bootstrap": "git submodule update --init --recursive && yarpm i && yarpm --prefix themes/blowfish/ install",
    "new": "hugo new content"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "prettier": "^3.3.3",
    "prettier-plugin-go-template": "^0.0.15",
    "yarpm": "^1.2.0"
  }
}